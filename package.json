{
  "name": "cloudstack-design",
  "version": "0.1.1",
  "private": false,
  "description": "A modern React component library for cloud computing interfaces",
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "cloudstack",
    "typescript"
  ],
  "author": "rokuko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rokuko/cloudstack-design.git"
  },
  "publishConfig": {
    "@rokuko:registry": "https://npm.pkg.github.com"
  },
  "homepage": "https://github.com/rokuko/cloudstack-design#readme",
  "bugs": {
    "url": "https://github.com/rokuko/cloudstack-design/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:lib": "tsup && tsc --project tsconfig.build.json --emitDeclarationOnly",
    "start": "next start",
    "lint": "eslint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "pnpm run build-storybook && gh-pages -d storybook-static",
    "predeploy": "pnpm run build-storybook",
    "prepublishOnly": "pnpm run build:lib",
    "publish:npm": "npm publish",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "release:patch": "pnpm version:patch",
    "release:minor": "pnpm version:minor",
    "release:major": "pnpm version:major",
    "release:npm": "git add . && git commit -m \"chore: prepare for npm release [publish-npm]\" && git push",
    "release:github": "git add . && git commit -m \"chore: prepare for github packages release [publish-github]\" && git push",
    "release:all": "git add . && git commit -m \"chore: prepare for dual release [publish-all]\" && git push"
  },
  "dependencies": {
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "rc-resize-observer": "^1.4.3",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.1",
    "@eslint/eslintrc": "^3",
    "@storybook/addon-a11y": "9.1.8",
    "@storybook/addon-docs": "9.1.8",
    "@storybook/addon-vitest": "9.1.8",
    "@storybook/nextjs-vite": "^9.1.8",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "eslint-plugin-storybook": "9.1.8",
    "gh-pages": "^6.1.1",
    "next": "15.5.3",
    "playwright": "^1.55.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "9.1.8",
    "tailwindcss": "^4",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
