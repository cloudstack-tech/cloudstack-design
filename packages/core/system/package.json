    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "react": ">=18 || >=19.0.0-rc.0"
  },
  "dependencies": {
    "@cloudstack-design/react-utils": "workspace:*",
    "@cloudstack-design/system-rsc": "workspace:*"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
