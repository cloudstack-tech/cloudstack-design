{
  "name": "@cloudstack-design/system",
  "version": "1.0.0",
  "description": "CloudStack Design system primitives",
  "keywords": [
    "system",
    "cloudstack-design"
  ],
  "author": "CloudStackDesign <support@cloudstack-design.com>",
  "homepage": "https://cloudstack-design.com",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudstack-tech/cloudstack-design.git",
    "directory": "packages/core/system"
  },
