{
  "name": "@cloudstack-design/theme",
  "version": "1.0.0",
  "description": "The default theme for CloudStack Design components.",
  "keywords": [
    "theme",
    "cloudstack-design",
    "ui",
    "components",
    "classNames",
    "css"
  ],
  "author": "CloudStackDesign <support@cloudstack-design.com>",
  "homepage": "https://cloudstack-design.com",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudstack-tech/cloudstack-design.git",
    "directory": "packages/core/theme"
  },
  "bugs": {
    "url": "https://github.com/cloudstack-tech/cloudstack-design/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  },
  "dependencies": {
    "tailwind-variants": "^3.1.1"
  },
  "devDependencies": {
    "tailwindcss": "^4"
  }
}
